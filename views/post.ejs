<!DOCTYPE html>
<html lang="en">
  <%- include("partials/_head") -%>

  <body>
    <!-- Navigation -->
    <%- include("partials/_nav") -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= post.title %></h1>
              <span class="meta" <%="post.dateCreated" %></span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p><%= post.detail %></p>
          </div>
        </div>
      </div>
    </article>
    <div class="col-xl-4 col-lg-5">
      <!-- Update and delete box -->
      <div class="tm-bg-gray tm-share-box">
        <div class="text-center">
          <a
            href="/post/edit/<%= post._id %>"
            class="btn btn-primary rounded-0 d-block ml-auto mr-0"
            ><span>Update Details</span></a
          >
        </div>
        <div class="text-center">
          <form
            method="POST"
            action="/post/<%= post._id %>?_method=DELETE"
            enctype="application/x-www-form-urlencoded"
          >
            <input type="hidden" name="_method" value="DELETE" />
            <button
              class="btn btn-danger rounded-0 d-block ml-auto mr-0"
              type="submit"
            >
              Delete resource
            </button>
          </form>
        </div>
      </div>
    </div>

    <hr />

    <!-- Footer -->
    <%- include("partials/_footer.ejs") -%>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>
  </body>
</html>
